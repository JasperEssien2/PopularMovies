<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAppBackgroundDark"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/empty_state_image_view"
                android:layout_width="@dimen/empty_state_image_view_width_height"
                android:layout_height="@dimen/empty_state_image_view_width_height"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/empty_state_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/movie_detail_title_text_size" />
        </LinearLayout>
    </FrameLayout>
</layout>